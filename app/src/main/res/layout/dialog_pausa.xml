<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:id="@+id/layout_dialog_pausa"
    android:background="@color/negro_transparente2">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:layout_marginTop="170dp"
        android:fontFamily="@font/ocra"
        android:text="Juego pausado"
        android:textColor="@android:color/white"
        android:textSize="30dp"
       />

    <Button
        android:id="@+id/dialog_pausa_boton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="199dp"
        android:background="@drawable/icon_reanudar"
        />

</LinearLayout>